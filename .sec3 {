programming language slider
const iconSlider = document.querySelector('.sec_lang_icons');
const iconImages = document.querySelectorAll('.sec_lang_icons li img');

// Button
const prevBtn = document.querySelector('#prevBtn');
const nextBtn = document.querySelector('#nextBtn');

//counter
let counter = 1;

const size = iconImages[0].clientWidth;

iconSlider.style.transform = 'translateX(' + (-size * counter) + 'px)';

//Button Listners

nextBtn.addEventListener('click',()=>{
    if (counter >= iconImages.length -1) return;
    iconSlider.style.transiton = "transform 0.4s ease-in-out";
    counter++;
    iconSlider.style.transform = 'translateX(' + (-size * counter) + 'px)';
});
const sec1h2 = document.querySelector(".sec2_h2");






prevBtn.addEventListener('click',()=>{
    if (counter <= 0) return;
    iconSlider.style.transiton = "transform 0.4s ease-in-out";
    counter--;
    iconSlider.style.transform = 'translateX(' + (-size * counter) + 'px)';
});

iconSlider.addEventListener ('transitionend', ()=>{
    if (iconImages[counter].id === 'lastClone'){
        iconSlider.style.transiton = 'none';
        counter = iconImages.length-2;
        iconSlider.style.transform = 'translateX(' + (-size * counter) + 'px)';        
    };
    if (iconImages[counter].id === 'firstClone'){
        iconSlider.style.transiton = 'none';
        counter = iconImages.length-counter;
        iconSlider.style.transform = 'translateX(' + (-size * counter) + 'px)';        
    };
    });



    <div class="sec3_slider_btn">
            <span id="cardprevBtn"><img src="/img/gradient_arrow_left.png" alt=""></span>
            <span id="cardnextBtn"><img src="/img/gradient_arrow_right.png" alt=""></span>
        </div>



